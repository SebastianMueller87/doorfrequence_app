# EditorConfig is awesome: http://EditorConfig.org

root = true
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation Python
[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false
